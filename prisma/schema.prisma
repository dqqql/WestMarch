generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum PostTag {
  DM悬赏
  寻找队伍
  跑团战报
}

enum MapNodeType {
  城镇
  地点
  事件
}

model User {
  id          String          @id @default(cuid())
  username    String          @unique
  password    String
  isDM        Boolean         @default(false)
  nickname    String?
  avatar      String?
  characters  Character[]
  posts       Post[]
  parties     Party[]
  resources   ResourceImage[]
  settings    UserSetting[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

model Character {
  id             String        @id @default(cuid())
  name           String
  race           String
  class          String
  img            String?
  str            Int?
  dex            Int?
  con            Int?
  int            Int?
  wis            Int?
  cha            Int?
  bio            String?
  fullBio        String?
  userId         String
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  posts          Post[]
  parties        Party[]
  partyMembers   PartyMember[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model Post {
  id          String    @id @default(cuid())
  title       String
  content     String
  tag         PostTag
  authorId    String
  author      User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  characterId String?
  character   Character?  @relation(fields: [characterId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model MapNode {
  id          String     @id @default(cuid())
  label       String
  type        MapNodeType
  x           Float
  y           Float
  description String?
  edgesAsSource MapEdge[] @relation("source")
  edgesAsTarget MapEdge[] @relation("target")
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model MapEdge {
  id       String   @id @default(cuid())
  sourceId String
  source   MapNode  @relation("source", fields: [sourceId], references: [id], onDelete: Cascade)
  targetId String
  target   MapNode  @relation("target", fields: [targetId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ResourceImage {
  id        String   @id @default(cuid())
  name      String
  url       String
  category  String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Document {
  id          String   @id @default(cuid())
  title       String
  content     String
  category    String
  author      String
  isPinned    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model UserSetting {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userNickname   String?
  userAvatar     String?
  sessionHistory Json?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  @@unique([userId])
}

model Party {
  id               String        @id @default(cuid())
  title            String
  content          String
  authorId         String
  author           User          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  characterId      String?
  character        Character?    @relation(fields: [characterId], references: [id])
  maxCount         Int           @default(4)
  nextSessionTime  DateTime?
  members          PartyMember[]
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
}

model PartyMember {
  id          String    @id @default(cuid())
  partyId     String
  party       Party     @relation(fields: [partyId], references: [id], onDelete: Cascade)
  characterId String
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  joinedAt    DateTime  @default(now())
  
  @@unique([partyId, characterId])
}
