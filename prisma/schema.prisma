generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum PostTag {
  DM悬赏
  寻找队伍
  杂谈
  跑团战报
}

enum MapNodeType {
  据点
  地城
  区域
}

model User {
  id          String          @id @default(cuid())
  username    String          @unique
  password    String
  isDM        Boolean         @default(false)
  nickname    String?
  avatar      String?
  characters  Character[]
  posts       Post[]
  parties     Party[]
  resources   ResourceImage[]
  settings    UserSetting[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

model Character {
  id             String        @id @default(cuid())
  name           String
  race           String
  class          String
  img            String?
  str            Int?
  dex            Int?
  con            Int?
  int            Int?
  wis            Int?
  cha            Int?
  bio            String?
  fullBio        String?
  userId         String
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  posts          Post[]
  parties        Party[]
  partyMembers   PartyMember[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model Post {
  id          String    @id @default(cuid())
  title       String
  content     String
  tag         PostTag
  authorId    String
  author      User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  characterId String?
  character   Character?  @relation(fields: [characterId], references: [id])
  honor       Int       @default(0)
  gold        Int       @default(0)
  reputation  Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model MapNode {
  id          String     @id @default(cuid())
  label       String
  type        MapNodeType
  hexQ        Int        // 蜂巢格轴坐标 Q
  hexR        Int        // 蜂巢格轴坐标 R
  hexS        Int        // 蜂巢格轴坐标 S (计算用)
  description String?
  events      MapEvent[]
  characters  MapCharacter[]
  facilities  MapFacility[]
  edgesAsSource MapEdge[] @relation("source")
  edgesAsTarget MapEdge[] @relation("target")
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@unique([hexQ, hexR])
}

model MapEdge {
  id        String   @id @default(cuid())
  sourceId  String
  source    MapNode  @relation("source", fields: [sourceId], references: [id], onDelete: Cascade)
  targetId  String
  target    MapNode  @relation("target", fields: [targetId], references: [id], onDelete: Cascade)
  pathStyle String   @default("车辙") // 通路样式：车辙、石板路、桥梁等
  color     String?  // 通路颜色
  width     Int      @default(2) // 通路宽度
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MapEvent {
  id          String   @id @default(cuid())
  nodeId      String
  node        MapNode  @relation(fields: [nodeId], references: [id], onDelete: Cascade)
  title       String
  description String?
  tags        String?  // 逗号分隔的标签
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model MapCharacter {
  id          String   @id @default(cuid())
  nodeId      String
  node        MapNode  @relation(fields: [nodeId], references: [id], onDelete: Cascade)
  name        String
  description String?
  role        String?  // 角色：NPC、商人、守卫等
  avatar      String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model MapFacility {
  id          String   @id @default(cuid())
  nodeId      String
  node        MapNode  @relation(fields: [nodeId], references: [id], onDelete: Cascade)
  name        String
  description String?
  type        String?  // 设施类型：商店、酒馆、教堂等
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ResourceImage {
  id        String   @id @default(cuid())
  name      String
  url       String
  category  String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Document {
  id          String   @id @default(cuid())
  title       String
  content     String
  category    String
  author      String
  isPinned    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model UserSetting {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userNickname   String?
  userAvatar     String?
  sessionHistory Json?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  @@unique([userId])
}

model Party {
  id               String        @id @default(cuid())
  title            String
  content          String
  authorId         String
  author           User          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  characterId      String?
  character        Character?    @relation(fields: [characterId], references: [id])
  maxCount         Int           @default(4)
  nextSessionTime  DateTime?
  members          PartyMember[]
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
}

model PartyMember {
  id          String    @id @default(cuid())
  partyId     String
  party       Party     @relation(fields: [partyId], references: [id], onDelete: Cascade)
  characterId String
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  joinedAt    DateTime  @default(now())
  
  @@unique([partyId, characterId])
}

model SystemSetting {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
